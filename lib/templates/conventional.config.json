{
    "minify": true,
    "autoprefixer": true,
    "sourceMaps": true,
    "browserUpdateNote": false,
    "sass": {
        "enabled": true,
        "inputFiles": {
            "Main": "./Resources/Private/Sass/Main.scss"
        },
        "outputPath": "./Resources/Public/Css/",
        "outputFilePattern": "[name].min.css"
    },
    "js": {
        "enabled": true,
        "inputFiles": {
            "Main": "./Resources/Private/JavaScript/Main.js"
        },
        "outputPath": "./Resources/Public/JavaScript/",
        "outputFilePattern": "[name].min.js"
    },
    "spritemap": {
        "enabled": true,
        "prefix": "",
        "inputFiles": "./Resources/Public/Images/SVG-icons/**/*.svg",
        "outputPath": "./Resources/Public/Images/",
        "outputFileName": "svg-spritemap.svg"
    }
}
